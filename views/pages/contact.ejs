<% include ../layout/header.ejs %>
<!--Contact-us-->
<% setting.forEach(function(item){%>
<section class="contact_us section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Liên hệ tư vấn</h3>
                <div class="contact_form gray-bg">
                    <form action="/admin/them-lien-he" enctype="multipart/x-www-from-urlencoded" method="post">
                        <div class="form-group">
                            <label class="control-label">Họ và tên <span>*</span></label>
                            <input type="text" class="form-control white_bg" id="contact_name" name="contact_name">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Địa chỉ email <span>*</span></label>
                            <input type="email" class="form-control white_bg" id="contact_email"  name="contact_email">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số điện thoại <span>*</span></label>
                            <input type="text" class="form-control white_bg" id="contact_phone_number"  name="contact_phone_number">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nội dung <span>*</span></label>
                            <textarea class="form-control white_bg" id="contact_content"  name="contact_content" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn" type="submit">Gửi <span class="angle_arrow"><i
                                        class="fa fa-angle-right" aria-hidden="true"></i></span></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Thông tin liên hệ</h3>
                <div class="contact_detail">
                    <ul>
                        <li>
                            <div class="icon_wrap"><i class="fa fa-phone" aria-hidden="true"></i></div>
                            <div class="contact_info_m"><a href="tel:<%= item.hotline %>"><%= item.hotline %></a></div>
                        </li>
                        <li>
                            <div class="icon_wrap"><i class="fa fa-envelope-o" aria-hidden="true"></i></div>
                            <div class="contact_info_m"><a
                                    href="mailto:<%= item.email %>"><%= item.email %></a></div> 
                        </li>
                    </ul>
                    <div class="map_wrap">
                        <div id="map">
                            <iframe width="100%" class="responsive" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3720.653118834257!2d106.0495616154037!3d21.166198588447!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135094e913c92d3%3A0x16caf573e1fa0204!2sHYUNDAI+B%E1%BA%AEC+NINH!5e0!3m2!1svi!2s!4v1553739413383" width="500" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%})%>
<!-- /Contact-us-->
<% include ../layout/footer.ejs %>
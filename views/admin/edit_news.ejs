<% include ../layout/header_admin.ejs %>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Tin tức</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Tin tức</a></li>
                    <li class="active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <!--/.col-->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Chỉnh sửa tin tức</strong>
                    </div>
                    <div class="card-body card-block">
                        <form action="/admin/chinh-sua-tin-tuc/tin-tuc=<%= news._id %>" method="post"
                            enctype="multipart/x-www-from-urlencoded" class="form-horizontal">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Ảnh tin tức</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" value="<%= news.news_images %>" id="news_images"
                                                name="news_images" class="form-control">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Tiêu đề</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" value="<%= news.news_title %>" id="news_title"
                                                name="news_title" class="form-control">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Tác giả</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" value="<%= news.news_author %>" id="news_author"
                                                name="news_author" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="row form-group">
                                        <div class="col-12 col-md-12">
                                            <label class=" form-control-label">Nội dung</label>
                                            <textarea class="form-control" id="news_content" name="news_content"
                                                required><%= news.news_content %></textarea>
                                            <script type="text/javascript">
                                                CKEDITOR.replace('news_content');
                                            </script>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Chỉnh sửa
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>
<% include ../layout/footer_admin.ejs %>
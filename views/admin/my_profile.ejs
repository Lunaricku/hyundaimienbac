<% include ../layout/header_admin.ejs %>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Thiết lập tài khoản</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Thiết lập tài khoản</a></li>
                    <li class="active">Chỉnh sửa</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <!--/.col-->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Thiết lập tài khoản</strong>
                    </div>
                    <div>
                        <strong style="color: green; padding: 3%;"><%= mess %></strong>
                    </div>
                    <div class="card-body card-block">
                        <form action="/admin/tai-khoan/change=<%= admin._id %>" method="post" enctype="multipart/x-www-from-urlencoded" class="form-horizontal">
                            <div class="row" style="margin: 3%;">
                                <div class="col-md-2">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="product-listing-img"
                                                style="border: solid 1px rgb(110, 109, 109); width: 150px;">
                                                <img style="width: 150px;" class="img-responsive"
                                                    src="<%= admin.admin_avata %>"
                                                    alt="">
                                            </div><br />
                                        </div>
                                        <div class="col-md-12">
                                            <div style="border: solid 1px silver; width: 150px; text-align: center">
                                                <label for="">Thông tin cá nhân</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="row form-group">
                                        <div class="col-12 col-md-12">
                                                <label class=" form-control-label">Thay đổi mật khẩu</label>
                                            <input style="width: 200px;" type="password" value="" id="password" name="password"
                                                class="form-control" placeholder="Điền mật khẩu mới">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                            <div class="col-12 col-md-12">
                                                    <label class=" form-control-label">Thay đổi avata</label>
                                                <input style="width: 200px;" type="text" value="" id="admin_avata" name="admin_avata"
                                                    class="form-control" placeholder="Nhập đường dẫn ảnh">
                                            </div>
                                        </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Chỉnh sửa
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>
<% include ../layout/footer_admin.ejs %>